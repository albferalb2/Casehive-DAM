<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageVivienda"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen de vivienda" />
        <LinearLayout
            android:id="@+id/layoutControlesImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnPrevImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_previous"
                android:contentDescription="Imagen anterior"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btnNextImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_next"
                android:contentDescription="Siguiente imagen"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:id="@+id/textTipo"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textUbicacion"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textPrecio"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="16dp"
            android:text="DescripciÃ³n:"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:src="@android:drawable/ic_menu_myplaces"
                android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:id="@+id/textHabitaciones"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <ImageView android:src="@android:drawable/ic_menu_info_details"
                android:layout_marginStart="16dp"
                android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:id="@+id/textBanos"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView android:src="@android:drawable/ic_menu_crop"
                android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:id="@+id/textSuperficie"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"

                />

            <ImageView android:src="@android:drawable/ic_menu_directions"
                android:layout_marginStart="16dp"
                android:layout_width="24dp" android:layout_height="24dp"/>

            <TextView android:id="@+id/textPlantas"
                android:layout_marginStart="4dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/textEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/textAnio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textCertificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textExtras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/darker_gray" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerEnMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver en Google Maps"
            android:icon="@android:drawable/ic_menu_mapmode"

            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
